# Database (required for server)
DATABASE_URL="postgresql://user:password@localhost:5432/stream?schema=public"

# Server
PORT=4000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# JWT (change in production)
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-key-min-32-chars

# Google OAuth (get credentials from https://console.cloud.google.com/apis/credentials)
# GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GOOGLE_CALLBACK_URL=http://localhost:4000/api/auth/google/callback

# Optional: CDN base URL for video streams
# CDN_URL=https://your-cdn.com/videos

# Optional: Stripe webhook (for payments)
# STRIPE_WEBHOOK_SECRET=whsec_xxx

# Frontend (Next.js) - set in apps/web/.env.local
# NEXT_PUBLIC_API_URL=http://localhost:4000
# For same-origin proxy (default), leave unset to use /api/server
